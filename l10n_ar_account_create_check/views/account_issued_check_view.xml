<openerp>
    <data>

	    <record model="ir.ui.view" id="account_issued_check_reject_form_view">
            <field name="name">account.issued.check.reject.form.view</field>
            <field name="model">account.issued.check</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="l10n_ar_account_check.view_account_issued_check_form"/>
            <field name="arch" type="xml">
       			<field name="account_bank_id" position="after">
       			 	<field name="rejected" attrs="{'invisible': [('rejected', '=', False)]}"/>
       			 	<field name="reject_move_id" attrs="{'invisible': [('reject_move_id', '=', False)]}"/>
       			</field> 	
            
            	<sheet position="before">
                    <header>
                        <button name="reject_issued_check" type="object" string="Rechazar Cheque"
                        attrs="{'invisible': [('rejected', '=', True)]}"/>
                    </header>
                </sheet>
            </field>
        </record>

	    <record model="ir.ui.view" id="account_issued_check_reject_tree_view">
            <field name="name">account.issued.check.reject.tree.view</field>
            <field name="model">account.issued.check</field>
            <field name="inherit_id" ref="l10n_ar_account_check.view_account_issued_check_tree"/>
            <field name="arch" type="xml">
            	<tree position="attributes">
            		<attribute name="colors">red:rejected==True</attribute>
            	</tree>
				<field name="amount" position="before">
					<field name="rejected" invisible="1"/>            	              		
				</field>
            </field>
        </record>
            
    </data>
</openerp>

