<openerp>

    <data noupdate="0">

        <record model="ir.ui.view" id="view_vendor_payment_checkbook_form">
            <field name="name">account.voucher.checkbook.form</field>
            <field name="model">account.voucher</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="l10n_ar_account_check.view_voucher_check_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='issued_check_ids']/form/group/group/field[@name='number']" position="before">
                        <field name="checkbook_id" domain="[('issued_check_ids', '=', False)]" on_change="on_change_checkbook_id(checkbook_id)"/>
                        <field name="check_id" attrs="{'readonly': [('issued','=',True)]}" on_change="on_change_check_id(check_id)" domain="[('state', '=', 'draft'), ('checkbook_id', '=', checkbook_id)]"/>
                        <field name="account_id" invisible="1"/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>

</openerp>

