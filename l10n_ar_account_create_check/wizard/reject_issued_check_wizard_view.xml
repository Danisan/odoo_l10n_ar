<openerp>

    <data>

        <record id="reject_issued_check_wizard_form" model="ir.ui.view">
            <field name="name">reject.issued.check.wizard.form</field>
            <field name="model">reject.issued.check.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Rechazar Cheque">
                	<group>
	                    <group>
	                        <field name="date"/>
	                        <field name="debit_account_id"/>
	                    </group>
	                    <group>
	                    	<field name="journal_id"/>
	                    	<field name="credit_account_id"/>
	                    </group>
	                </group>    
                    <footer>
                        <button name="reject_check" string="Rechazar" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>

</openerp>

