<openerp>

    <data>

        <record id="cancel_issued_check_wizard_form" model="ir.ui.view">
            <field name="name">cancel.issued.check.wizard.form</field>
            <field name="model">cancel.issued.check.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Anular Cheque">
                    <group>
                        <field name="checkbook_id" invisible="1"/>
                        <field name="checkbook_check_id"  string="Cheque" domain="[('checkbook_id','=', checkbook_id), ('state', '=', 'draft')]"/>
                    </group>
                    <footer>
                        <button name="cancel_check" string="Anular" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="cancel_issued_check_wizard_search" model="ir.ui.view">
            <field name="name">cancel.issued.check.wizard.search</field>
            <field name="model">cancel.issued.check.wizard</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="checkbook_id"/>
                </search>
            </field>
        </record>


    </data>

</openerp>

