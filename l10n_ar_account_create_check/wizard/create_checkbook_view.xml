<openerp>

    <data>

        <record id="view_wizard_create_check" model="ir.ui.view">
            <field name="name">wizard.create.check.form</field>
            <field name="model">wizard.create.check</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create checkbooks" version="7.0">
                    <group col="4">
                        <field name="bank_account_id" domain="[('company_id','=',company_id)]" widget="selection"/>
                        <field name="account_id" domain="[('type', '!=', 'view')]"/>
                        <field name="start_num"/>
                        <field name="end_num"/>
                        <field name="checkbook_num"/>
                    </group>
                    <group col="4">
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <footer>
                        <button name="create_checkbook" string="Create" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_create_check" model="ir.actions.act_window">
            <field name="name">Create checkbook</field>
            <field name="res_model">wizard.create.check</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_wizard_create_check"/>
            <field name="target">new</field>
        </record>

        <menuitem
            action="action_wizard_create_check"
            id="menu_wizard_create_check"
            sequence="20"
            name="Create Checkbook"
            parent="l10n_ar_account_check.menu_treasury_configuration" groups="account.group_account_user"
        />

    </data>

</openerp>

