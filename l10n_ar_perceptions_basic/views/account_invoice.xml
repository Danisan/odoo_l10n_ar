<openerp>

    <data>

        <record id="view_invoice_perception_form" model="ir.ui.view">
            <field name="name">account.invoice.perception.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <page string="Invoice Lines" position="after">
                    <page string="Percepciones">
                        <label for="perception_ids"/>
                        <field name="perception_ids" nolabel="1" colspan="4">
                            <tree string="Lineas Percepcion" editable="bottom">
                                <field name="perception_id" domain="[('type_tax_use','in',['sale','all'])]"/>
                                <field name="name" invisible="True"/>
                                <field name="account_id" invisible="True"/>
                                <field name="base_code_id" invisible="True"/>
                                <field name="tax_code_id" invisible="True"/>
                                <field name="base" sum="Base"/>
                                <field name="amount" sum="Monto"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <record id="view_invoice_supplier_perception_form" model="ir.ui.view">
            <field name="name">account.invoice.perception.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <page string="Invoice" position="after">
                    <page string="Percepciones">
                        <label for="perception_ids"/>
                        <field name="perception_ids" nolabel="1" colspan="4">
                            <tree string="Lineas Percepcion" editable="bottom">
                                <field name="perception_id" domain="[('type_tax_use','in',['purchase','all'])]"/>
                                <field name="name" invisible="True"/>
                                <field name="account_id" invisible="True"/>
                                <field name="base_code_id" invisible="True"/>
                                <field name="tax_code_id" invisible="True"/>
                                <field name="base" sum="Base"/>
                                <field name="amount" sum="Monto"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

    </data>

</openerp>

