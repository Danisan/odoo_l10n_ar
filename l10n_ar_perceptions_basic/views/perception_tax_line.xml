<openerp>

  <data>

        <record id="view_perception_tax_line_tree" model="ir.ui.view">
            <field name="name">perception.tax.line.tree</field>
            <field name="model">perception.tax.line</field>
            <field name="arch" type="xml">
                <tree string="Perception Tax Lines" create="false" delete="false">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="jurisdiccion"/>
                    <field name="state_id"/>
                    <field name="invoice_id"/>
                    <field name="partner_id"/>
                    <field name="vat"/>
                    <field name="amount_with_sign" sum="Amount Total"/>
                    <field name="amount" invisible="True"/>
                    <field name="base" sum="Base Total"/>
                    <field name="company_id" invisible="True"/>
                </tree>
            </field>
        </record>

        <record id="view_perception_tax_line_form" model="ir.ui.view">
            <field name="name">perception.tax.line.form</field>
            <field name="model">perception.tax.line</field>
            <field name="arch" type="xml">
                <form string="Perception Tax Line" create="false" delete="false">
                    <sheet>
                        <h1>
                            <label string="Perception Tax Line"/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="partner_id"/>
                                <field name="vat"/>
                            </group>
                            <group>
                                <field name="amount" sum="Amount Total"/>
                                <field name="base" sum="Base Total"/>
                            </group>
                            <group>
                                <field name="type"/>
                                <field name="jurisdiccion"/>
                                <field name="state_id"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View for perception.tax.line -->
        <record id="view_perception_tax_line_search" model="ir.ui.view">
            <field name="name">perception.tax.line.search</field>
            <field name="model">perception.tax.line</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Perception Tax Lines">
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="invoice_id"/>
                        <field name="partner_id"/>
                        <field name="perception_id"/>
                        <field name="state_id"/>
                        <field name="jurisdiccion"/>
                        <field name="type"/>
                    </group>
                    <group string="Filtros">
                        <filter name="applied" string="Efectuadas" domain="[('perception_id.type_tax_use', '=', 'sale')]"/>
                        <filter name="supported" string="Soportadas" domain="[('perception_id.type_tax_use', '=', 'purchase')]"/>
                    </group>
                    <group expand="0" string="Agrupar por...">
                        <filter string="Provincia" domain="[]" context="{'group_by':'state_id'}"/>
                        <filter string="Tipo" domain="[]" context="{'group_by':'type'}"/>
                        <filter string="Jurisdiccion" domain="[]" context="{'group_by':'jurisdiccion'}"/>
                        <filter string="Fecha" domain="[]"  context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_perception_tax_tree" model="ir.actions.act_window">
            <field name="name">Perception Tax Applied</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">perception.tax.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_perception_tax_line_tree"/>
            <field name="context">{"search_default_applied":1}</field>
            <field name="domain">[('invoice_id.state','in',['open','paid'])]</field>
            <field name="search_view_id" ref="view_perception_tax_line_search" />
        </record>

        <record id="action_perception_tax_supported_tree" model="ir.actions.act_window">
            <field name="name">Perception Tax Supported</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">perception.tax.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_perception_tax_line_tree"/>
            <field name="context">{"search_default_supported":1}</field>
            <field name="domain">[('invoice_id.state','in',['open','paid'])]</field>
            <field name="search_view_id" ref="view_perception_tax_line_search"/>
        </record>

        <menuitem id="perception_tax_line_applied_menu" name="Percepciones Efectuadas" parent="account.menu_finance_receivables" sequence="30" action="action_perception_tax_tree"/>

        <menuitem id="perception_tax_line_supported_menu" name="Percepciones Soporadas" parent="account.menu_finance_payables" sequence="30" action="action_perception_tax_supported_tree"/>

    </data>

</openerp>

