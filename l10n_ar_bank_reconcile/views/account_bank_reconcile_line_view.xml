<?xml version="1.0" encoding="utf-8"?>

<openerp>

    <data>

        <!-- FORM VIEW -->
        <record id="bank_reconcile_line_form_view" model="ir.ui.view">
            <field name="name">bank.reconcile.line.form.view</field>
            <field name="model">account.bank.reconcile.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="period_id"/>                            
                            </group>
                            <group>
                                <field name="last_balance"/>
                                <field name="current_balance"/>
                            </group>
                        </group>
                        <group string="Movements">
                            <field name="last" invisible="1"/>
                            <field name="move_line_ids" nolabel="1" attrs="{'readonly': [('last', '=', False)]}">
                                <tree editable="bottom" delete="false" create="false">
                                    <field name="period_id" readonly="True"/>
                                    <field name="name" readonly="True"/>
                                    <field name="ref" readonly="True"/>
                                    <field name="move_id" readonly="True"/>
                                    <field name="debit" readonly="True"/>
                                    <field name="credit" readonly="True"/>
                                    <field name="delete_from_conciliation"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>

</openerp>
