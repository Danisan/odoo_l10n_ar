<?xml version="1.0" encoding="utf-8"?>

<openerp>

    <data>

        <!-- FORM VIEW -->
        <record id="bank_reconcile_line_form_view" model="ir.ui.view">
            <field name="name">bank.reconcile.line.form.view</field>
            <field name="model">account.bank.reconcile.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="period_id"/>
                            </group>
                            <group>
                                <field name="last_balance"/>
                                <field name="current_balance"/>
                            </group>
                        </group>
                        <group string="Movements">
                            <field name="move_line_ids" nolabel="1">
                                <tree>
                                    <field name="period_id"/>
                                    <field name="name"/>
                                    <field name="ref"/>
                                    <field name="move_id"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>

</openerp>
