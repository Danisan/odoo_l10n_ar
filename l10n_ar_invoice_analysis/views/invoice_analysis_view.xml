<openerp>


    <data>

        <!-- TREE VIEW -->
        <record model="ir.ui.view" id="invoice_analysis_tree_view">
            <field name="name">invoice.analysis.tree.view</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <tree string="Analisis de facturas" edit="false" create="false" delete="false">
                    <field name="type" invisible="1"/>
                    <field name="is_debit_note" invisible="1"/>
                    <field name="partner_id"/>
                    <field name="date_invoice"/>
                    <field name="type_analysis"/>
                    <field name="denomination_id"/>
                    <field name="internal_number"/>
                    <field name="user_id"/>
                    <field name="date_due"/>
                    <field name="origin"/>
                    <field name="residual_analysis" sum="Total"/>
                    <field name="amount_untaxed_analysis" sum="Total"/>
                    <field name="amount_total_analysis" sum="Total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="invoice_analysis_search_view">
            <field name="name">invoice.analysis.search.view</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <filter name="draft" position="before">
                    <field name="date_invoice"/>
                </filter>
                <filter name="group_by_partner_id" position="before">
                    <filter string="Tipo" context="{'group_by': 'type_analysis'}"/>
                </filter>
            </field>
        </record>


        <!-- VIEW DEFINITION -->
        <record model="ir.actions.act_window" id="action_invoice_analysis">
            <field name="name">Análisis de facturas</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('state', 'not in', ('draft', 'cancel')), ('type', 'not in', ('in_invoice', 'in_refund'))]</field>
            <field name="view_id" ref="invoice_analysis_tree_view"/>
        </record>


        <record model="ir.actions.act_window" id="action_supplier_invoice_analysis">
            <field name="name">Análisis de facturas</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('state', 'not in', ('draft', 'cancel')), ('type', 'not in', ('out_invoice', 'out_refund'))]</field>
            <field name="view_id" ref="invoice_analysis_tree_view"/>
        </record>

        <menuitem action="action_invoice_analysis" id="menu_invoice_analysis_dashboard" name="Análisis de facturación" parent="base.next_id_64"/>
        <menuitem action="action_supplier_invoice_analysis" id="menu_purchase_invoice_analysis_dashboard" name="Análisis de facturación" parent="base.next_id_73"/>

    </data>

</openerp>

