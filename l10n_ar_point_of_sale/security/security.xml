<openerp>

    <!-- RULES REISTRY -->
    <data noupdate="1">

        <record model="ir.rule" id="multi_invoice_denomination">
            <field name="name">Multi : Invoice Denomination</field>
            <field name="model_id" ref="model_invoice_denomination"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

        <record model="ir.rule" id="multi_pos_ar">
            <field name="name">Multi : Pos AR</field>
            <field name="model_id" ref="model_pos_ar"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

    </data>

</openerp>
