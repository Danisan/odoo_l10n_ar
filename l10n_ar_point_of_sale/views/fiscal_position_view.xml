<openerp>

    <data>

        <record id="view_pos_fiscal_position_form" model="ir.ui.view">
            <field name="name">account.fiscal.position.form.inherit</field>
            <field name="model">account.fiscal.position</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_account_position_form"/>
            <field name="arch" type="xml">
                <separator string="Taxes Mapping" position="before">
                    <group string="Denominations">
                        <field name="denomination_id" string="Invoice Denomination"/>
                        <field name="denom_supplier_id" string="Supplier Denomination"/>
                    </group>
                </separator>
                <field name="name" position="after">
                    <field name="afip_code"/>
                    <field name="has_country_cuit"/>
                </field>
            </field>
        </record>

        <record id="view_pos_fiscal_position_tree" model="ir.ui.view">
            <field name="name">account.fiscal.position.tree.inherit</field>
            <field name="model">account.fiscal.position</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="account.view_account_position_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="afip_code"/>
                    <field name="denomination_id" string="Invoice Denomination"/>
                    <field name="denom_supplier_id" string="Supplier Denomination"/>
                </field>
            </field>
        </record>

    </data>

</openerp>

