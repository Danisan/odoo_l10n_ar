<openerp>

    <data>

        <record model="ir.ui.view" id="res_partner_imputation_tree_view">
            <field name="name">credit.and.debit.current.account.tree.view</field>
            <field name="model">res.partner.imputation</field>
            <field name="arch" type="xml">
                <tree colors="green:state == 'valid'; gray: state == 'cancel'">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="res_partner_imputation_form_view">
            <field name="name">credit.and.debit.current.account.form.view</field>
            <field name="model">res.partner.imputation</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="remove_move" confirm="Esta seguro?" type="object" string="Cancelar imputacion"
                        attrs="{'invisible': ([('state', '=', 'cancel')])}"/>
                    </header>                
                    <sheet>
                        <group>
                            <field name="state" invisible="1"/>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="move_id"/>
                        </group>
                        <group string="Detalle de documentos">
                            <field name="document_imputation_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="imputation_to"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>

</openerp>

