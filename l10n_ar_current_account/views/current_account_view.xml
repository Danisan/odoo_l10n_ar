<openerp>

    <data>

        <!-- VIEW DEFINITION OF CURRENT ACCOUNT -->
        <record model="ir.ui.view" id="current_account_tree_view">
            <field name="name">current.account.tree.view</field>
            <field name="model">current.account</field>
            <field name="arch" type="xml">
                <tree edit="false" create="false" delete="false">
                    <field name="partner_id"/>
                    <field name="doc_type"/>
                    <field name="denomination"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="residual"/>
                    <field name="subtotal"/>
                    <field name="total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <!-- SEARCH DEFINITION OF CURRENT ACCOUNT -->
        <record model="ir.ui.view" id="current_account_search_view">
            <field name="name">current.account.search.view</field>
            <field name="model">current.account</field>
            <field name="arch" type="xml">
                <search>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <!-- ACTION TO RAISE WIZARD -->
        <record id="action_current_account_conciliate" model="ir.actions.server">
            <field name="name">Conciliate</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="l10n_ar_current_account.model_current_account"/>
            <field name="code">
                if obj.raise_imputation_wizard():
                    action = {
                        "type": "ir.actions.act_window",
                        "res_model": 'current.account.imputation.wizard',
                        "view_mode": "form",
                        "target": "new",
                        "res_id": obj.wizard_id,
                    }
            </field>
        </record>

        <record model="ir.values" id="ir_current_account_conciliate">
            <field name="name">ir.current.account.conciliate</field>
            <field name="action_id" ref="action_current_account_conciliate"/>
            <field name="value" eval="'ir.actions.server,' + str(ref('action_current_account_conciliate'))"/>
            <field name="key">action</field>
            <field name="model_id" ref="l10n_ar_current_account.model_current_account"/>
            <field name="model">current.account</field>
            <field name="key2">client_action_multi</field>
        </record>

    </data>

</openerp>

