<openerp>
    <data>
    	
        <!-- MENU EN REPORTE -->
        <menuitem
            id="dues_main_menu"
            name="Deudas"
            parent="base.menu_reporting"
            groups="account.group_account_invoice"
        />        
        
        <record model="ir.ui.view" id="due_current_account_wizard_form">
            <field name="name">due.current.account.wizard.form</field>
            <field name="model">due.current.account.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <group string="Fechas de vencimiento">
                    <group>
                        <field name="due_date_start"/>
                        <field name="type"/>
                    </group>
                    <group>
                        <field name="due_date_stop"/>
                    </group>
                    <footer>
                        <button type="object" name="get_all_accounts" string="Generar" class="oe_highlight"/>
                    </footer>                    
                </group>
            </field>
        </record>

        <record id="action_due_current_account_wizard" model="ir.actions.act_window">
            <field name="name">Deudas y comprobantes sin imputar</field>
            <field name="res_model">due.current.account.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
            
        <!-- MENUES EN REPORTES -->
        <menuitem
            action="action_due_current_account_wizard"
            id="current_account_due_menu"
            name="Generar reporte"
            parent="dues_main_menu" 
        />
        
    </data>
</openerp>

