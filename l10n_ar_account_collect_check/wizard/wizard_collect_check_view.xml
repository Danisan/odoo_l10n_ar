<openerp>

    <data>

        <record model="ir.ui.view" id="account_collect_check_wizard_form">
            <field name="name">account.collect.check.wizard.form</field>
            <field name="model">wizard.account.collect.check</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Collect check" version="7.0">
                    <group colspan="4" col="4">
                        <field name="bank_account_id" domain="[('company_id','=',company_id)]" widget="selection"/>
                        <field name="journal_id"/>
                        <field name="account_id"/>
                        <field name="date"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                    <newline/>
                    <group colspan="4" col="4">
                        <field name="check_id"/>
                        <field name="amount"/>
                        <field name="type"/>
                        <field name="issue_date"/>
                        <field name="payment_date" attrs="{'invisible': [('type', '=', 'common')], 'required': [('type','=','postdated')]}"/>
                    </group>
                    <footer>
                        <button type="object" name="action_collect_check" string="Deposit" class="oe_highlight"/>
                        or
                        <button class="oe_link" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- ACCIÓN  -->
        <record  id="account_collect_check_action" model="ir.actions.act_window">
            <field name="name">Collect Checks</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.account.collect.check</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_collect_check_wizard_form"/>
            <field name="target">new</field>
        </record>

        <!-- MENÚ  -->
        <menuitem id="account_collect_check_menu" action="account_collect_check_action" name="Collect Checks" parent="l10n_ar_account_check.menu_treasury_issued_check_menu" groups="account.group_account_manager"/>


    </data>



</openerp>

