<openerp>

    <data>

        <!-- TREE VIEW -->
        <record model="ir.ui.view" id="taxes_report_xls_tree">
            <field name="name">taxes.report.xls.tree</field>
            <field name="model">taxes.report.xls</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree version="7.0">
                    <field name="name"/>
                    <field name="data" filename="filename"/>
                    <field name="filename" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record model="ir.ui.view" id="taxes_report_xls_form">
            <field name="name">taxes.report.xls.form</field>
            <field name="model">taxes.report.xls</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form version="7.0">
                    <sheet>
                        <group>
                            <group>
                                <field name="fiscal_year_id"/>
                                <field name="name"/>
                                <field name="data" filename="filename"/>
                                <field name="filename" invisible="1"/>
                            </group>
                            <group>
                                <field name="period_id" domain="[('fiscalyear_id','=', fiscal_year_id)]"/>
                                <field name="based_on"/>
                            </group>
                        </group>
                        <footer>
                            <button type="object" name="generate_taxes_report" string="Crear" class="oe_highlight"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <act_window
            name="Generate Report"
            res_model="taxes.report.xls"
            src_model="account.invoice"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_generate_report"/>

        <!-- ACCIÓN  -->
        <record  id="account_deposit_slip_action" model="ir.actions.act_window">
            <field name="name">Subdiario de Iva</field>
            <field name="res_model">taxes.report.xls</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENÚ  -->
        <menuitem id="account_generate_tax_report_menu" action="account_deposit_slip_action" name="Subdiario de Iva" parent="account.menu_tax_report"/>

    </data>


</openerp>

