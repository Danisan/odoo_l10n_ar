<openerp>

    <data>

        <!--TREE VIEW -->
        <record model="ir.ui.view" id="retention_activity_tree_view">
            <field name="name">retention.activity.tree.view</field>
            <field name="model">retention.activity</field>
            <field name="arch" type="xml">
                <tree string="Retention Activity">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <!-- ACTION -->
        <record model="ir.actions.act_window" id="retention_activity_source_form">
            <field name="name">Actividades Retencion</field>
            <field name="res_model">retention.activity</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENU -->
        <menuitem id="retention_activity_menu_view"
                  name="Actividades Retencion"
                  parent="account.account_account_menu"
                  action="retention_activity_source_form"
                  sequence="20"
        />

    </data>

</openerp>

