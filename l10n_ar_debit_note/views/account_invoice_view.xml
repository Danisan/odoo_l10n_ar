<openerp>
    <data>

        <!-- CLIENTE -->

        <record model="ir.ui.view" id="invoice_debit_note_customer_form">
            <field name="name">Debit note customer form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[2]/group/group/field[@name='name']" position="after">
                    <field name="is_debit_note" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </xpath>
            </field>
        </record>

        <!-- PROVEEDOR -->

        <record model="ir.ui.view" id="invoice_debit_note_supplier_form">
            <field name="name">Debit note supplier form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="move_id" position="after">
                    <field name="is_debit_note" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </field>
            </field>
        </record>

    </data>
</openerp>

