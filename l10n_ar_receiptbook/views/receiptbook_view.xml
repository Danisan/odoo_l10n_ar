<openerp>

    <data>

        <!-- ACCIÓN -->
        <record id="receiptbook_menu_action" model="ir.actions.act_window">
            <field name="name">Receiptbooks</field>
            <field name="res_model">account.receiptbook</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- VISTA FORM -->
        <record id="account_receiptbook_form_view" model="ir.ui.view">
            <field name="name">account.receiptbook.form.view</field>
            <field name="model">account.receiptbook</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Receiptbooks" version="7.0">
                    <sheet>
                         <h1>
                            <label string="Receiptbook"/>
                        </h1>
                        <group>
                            <group>
                                <field name="name" label="Number"/>
                                <field name="priority"/>
                            </group>
                            <group>
                                <field name="company_id" label="Company" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="print_type"/>
                            </group>
                        </group>
                        <separator string="Description"/>
                        <field name="desc" nolabel="1"/>
                        <notebook>
                                <!-- Seccion para pages -->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- VISTA TREE -->
        <record id="account_receiptbook_tree_view" model="ir.ui.view">
            <field name="name">account.receiptbook.tree.view</field>
            <field name="model">account.receiptbook</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Receiptbooks">
                    <field name="name"/>
                    <field name="print_type"/>
                    <field name="priority"/>
                </tree>
            </field>
        </record>

          <!-- MENÚ  -->
        <menuitem id="account_receiptbook_menu" action="receiptbook_menu_action"  name="Receiptbooks" parent="account_menu_receiptbooks" sequence="10"/>

    </data>

</openerp>

